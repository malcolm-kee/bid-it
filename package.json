{
  "name": "bid-it",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "license": "MIT",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build && yarn build:scripts",
    "build:rest": "nest build",
    "build:scripts": "webpack --config scripts/webpack.config.js",
    "format": "prettier --write \"apps/**/*.ts\" \"libs/**/*.ts\"",
    "start": "concurrently \"npm:start:rest\" \"npm:start:engine\" \"npm:start:socket\" \"npm:start:reporting\"",
    "start:dev": "nest start --watch",
    "start:rest": "nest start bid-it --watch",
    "start:rest:prod": "node dist/apps/bid-it/main",
    "start:engine": "node dist/scripts/engine.js",
    "start:socket": "node dist/scripts/socket.js",
    "start:reporting": "node dist/scripts/reporting.js",
    "start:debug": "nest start --debug --watch",
    "start:prod": "concurrently \"npm:start:rest:prod\" \"npm:start:engine\" \"npm:start:socket\" \"npm:start:reporting\"",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./apps/bid-it/test/jest-e2e.json",
    "setup": "node simulate/setup.js",
    "simulate": "node simulate/simulate.js",
    "report": "node dist/scripts/generate-report.js"
  },
  "dependencies": {
    "@nestjs/bull": "^0.0.3",
    "@nestjs/common": "^6.10.14",
    "@nestjs/config": "^0.2.4",
    "@nestjs/core": "^6.10.14",
    "@nestjs/microservices": "^6.11.11",
    "@nestjs/mongoose": "^6.3.1",
    "@nestjs/platform-express": "^6.10.14",
    "@nestjs/schedule": "^0.2.0",
    "@nestjs/swagger": "^4.3.2",
    "amqp-connection-manager": "^3.2.0",
    "amqplib": "^0.5.5",
    "bull": "^3.13.0",
    "class-transformer": "^0.2.3",
    "class-validator": "^0.11.0",
    "date-fns": "^2.10.0",
    "dotenv": "^8.2.0",
    "mongoose": "^5.9.3",
    "mongoose-unique-validator": "^2.0.3",
    "node-fetch": "^2.6.0",
    "redis": "^3.0.2",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.0",
    "rxjs": "^6.5.4",
    "swagger-ui-express": "^4.1.3",
    "uuid": "^7.0.2",
    "ws": "^7.2.3"
  },
  "devDependencies": {
    "@nestjs/cli": "^6.13.2",
    "@nestjs/schematics": "^6.8.1",
    "@nestjs/testing": "^6.10.14",
    "@types/bull": "^3.12.1",
    "@types/express": "^4.17.2",
    "@types/jest": "^25.1.4",
    "@types/mongoose": "^5.7.3",
    "@types/mongoose-unique-validator": "^1.0.3",
    "@types/node": "^13.1.6",
    "@types/node-fetch": "^2.5.5",
    "@types/redis": "^2.8.16",
    "@types/supertest": "^2.0.8",
    "@types/uuid": "^7.0.0",
    "@types/ws": "^7.2.2",
    "@typescript-eslint/eslint-plugin": "^2.12.0",
    "@typescript-eslint/parser": "^2.12.0",
    "concurrently": "^5.1.0",
    "eslint": "^6.7.2",
    "eslint-config-prettier": "^6.7.0",
    "eslint-plugin-import": "^2.19.1",
    "jest": "^25.1.0",
    "prettier": "^1.18.2",
    "supertest": "^4.0.2",
    "ts-jest": "^25.2.1",
    "ts-loader": "^6.2.1",
    "ts-node": "^8.6.0",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^3.8.3",
    "webpack": "^4.42.0",
    "webpack-cli": "^3.3.11",
    "webpack-node-externals": "^1.7.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/apps/",
      "<rootDir>/libs/"
    ],
    "moduleNameMapper": {
      "@app/deal-data/(.*)": "<rootDir>/libs/deal-data/src/$1",
      "@app/deal-data": "<rootDir>/libs/deal-data/src"
    }
  }
}