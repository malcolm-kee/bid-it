{
  "name": "bid-it",
  "version": "0.1.0",
  "description": "Scalable Bidding System With Microservices Architecture",
  "author": "Malcolm Kee <malcolm.keeweesiong@gmail.com>",
  "license": "MIT",
  "scripts": {
    "start": "concurrently \"npm:start:rest\" \"npm:start:socket\" \"npm:start:engine\" \"npm:start:reporting\"",
    "start:rest": "nest start bid-it --watch",
    "start:socket": "nest start socket --watch",
    "start:engine": "nest start engine --watch",
    "start:rest:prod": "node dist/apps/bid-it/main",
    "start:socket:prod": "node dist/apps/socket/main",
    "start:engine:prod": "node dist/apps/engine/main",
    "start:reporting": "node dist/scripts/reporting.js",
    "prestart:prod": "npm run build",
    "start:prod": "concurrently \"npm:start:rest:prod\" \"npm:start:engine:prod\" \"npm:start:socket:prod\" \"npm:start:reporting\"",
    "prebuild": "rimraf dist",
    "build": "yarn build:apps && yarn build:scripts",
    "build:apps": "yarn build:rest && yarn build:socket && yarn build:engine",
    "build:rest": "nest build",
    "build:socket": "nest build socket",
    "build:engine": "nest build engine",
    "build:scripts": "webpack --config scripts/webpack.config.js",
    "format": "prettier --write \"apps/**/*.ts\" \"libs/**/*.ts\" \"scripts/**/*.{ts,js}\"",
    "prestart": "npm run build",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./apps/bid-it/test/jest-e2e.json",
    "setup": "node simulate/setup.js",
    "simulate": "node simulate/simulate.js",
    "report": "node dist/scripts/generate-report.js"
  },
  "dependencies": {
    "@nestjs/bull": "^0.1.1",
    "@nestjs/common": "^7.0.9",
    "@nestjs/config": "^0.4.0",
    "@nestjs/core": "^7.0.9",
    "@nestjs/microservices": "^7.0.9",
    "@nestjs/mongoose": "^7.0.0",
    "@nestjs/platform-express": "^7.0.9",
    "@nestjs/platform-ws": "^7.0.9",
    "@nestjs/schedule": "^0.3.1",
    "@nestjs/swagger": "^4.5.3",
    "@nestjs/websockets": "^7.0.9",
    "bull": "^3.13.0",
    "class-transformer": "^0.2.3",
    "class-validator": "^0.12.2",
    "date-fns": "^2.12.0",
    "dotenv": "^8.2.0",
    "mongoose": "^5.9.10",
    "mongoose-unique-validator": "^2.0.3",
    "node-fetch": "^2.6.0",
    "redis": "^3.0.2",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.0",
    "rxjs": "^6.5.5",
    "swagger-ui-express": "^4.1.4",
    "uuid": "^8.0.0",
    "ws": "^7.2.5"
  },
  "devDependencies": {
    "@nestjs/cli": "^7.1.4",
    "@nestjs/schematics": "^7.0.0",
    "@nestjs/testing": "^7.0.9",
    "@types/bull": "^3.12.2",
    "@types/express": "^4.17.6",
    "@types/jest": "^25.2.1",
    "@types/mongoose": "^5.7.14",
    "@types/mongoose-unique-validator": "^1.0.4",
    "@types/node": "^13.13.4",
    "@types/node-fetch": "^2.5.7",
    "@types/redis": "^2.8.18",
    "@types/supertest": "^2.0.8",
    "@types/uuid": "^7.0.3",
    "@types/ws": "^7.2.4",
    "@typescript-eslint/eslint-plugin": "^2.30.0",
    "@typescript-eslint/parser": "^2.30.0",
    "concurrently": "^5.2.0",
    "eslint": "^7.0.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.20.2",
    "jest": "^26.0.1",
    "prettier": "^2.0.5",
    "supertest": "^4.0.2",
    "ts-jest": "^25.4.0",
    "ts-loader": "^7.0.1",
    "ts-node": "^8.9.1",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^3.8.3",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.11",
    "webpack-node-externals": "^1.7.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/apps/",
      "<rootDir>/libs/"
    ],
    "moduleNameMapper": {
      "@app/deal-data/(.*)": "<rootDir>/libs/deal-data/src/$1",
      "@app/deal-data": "<rootDir>/libs/deal-data/src",
      "@app/const/(.*)": "<rootDir>/libs/const/src/$1",
      "@app/const": "<rootDir>/libs/const/src"
    }
  }
}
