{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2017",
    "sourceMap": true,
    "strictNullChecks": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "esModuleInterop": true,
    "paths": {
      "@app/deal-data": [
        "libs/deal-data/src"
      ],
      "@app/deal-data/*": [
        "libs/deal-data/src/*"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}